
{
  "manifest_version": 3,
  "name": "Context",
  "version": "0.1.0",
  "description": "An AI assistant to log and summarize your browsing sessions.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "alarms",
    "offscreen",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["Readability.js", "content_script.js", "marked.umd.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
